gcloud compute instances create control-plane \
--machine-type=e2-medium \
--network-interface ''  \
--image=ubuntu-2004-focal-v20250111 \
--image-project=ubuntu-os-cloud \
--boot-disk-size=20GB 

gcloud compute instances create worker-node0{1..2} \
--machine-type=e2-medium \
--network-interface ''  \
--image=ubuntu-2004-focal-v20250111 \
--image-project=ubuntu-os-cloud \
--boot-disk-size=20GB
