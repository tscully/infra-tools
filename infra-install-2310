gcloud compute instances create control-plane --zone=europe-west1-b \
--machine-type=e2-medium \
--network-interface ''  \
--image=ubuntu-2310-mantic-amd64-v20231215 \
--image-project=ubuntu-os-cloud \
--boot-disk-size=200GB 

